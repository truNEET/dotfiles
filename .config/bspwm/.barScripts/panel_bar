#! /bin/sh
#
# Example panel for LemonBoy's bar

. panel_colors

# Colorscheme for mocho
#BLUE="#FF8AB3B5"
#RED="#FFCB6077"
#YELLOW="#FFF4BC87"
#ORANGE="#FFD28B71"
#MAGENTA="#FFA89BB9"
#TEAL="#FF7BBdA4"
#LIGHTGREY="#FFb8AfAD"
#DARKGREY="#FF7E705A"
#GREEN="#FF90A950"
#BG="#FF3B3228"

# Colorscheme for default-dark
BLUE="#FF5F819D"
LIGHTBLUE="#FF81A2BE"
RED="#FFA54242"
YELLOW="#FFF0C674"
ORANGE="#FFDE935F"
MAGENTA="#FF85678F"
TEAL="#FF5E8D87"
LIGHTGREY="#FFC5C8C6"
DARKGREY="#FF707880"
GREEN="#FF8C9440"
PURPLE="#FF9547C9"
BG="#FF151515"
#MIDDLE="#FF373B41"
MIDDLE="#FF151515"

while read -r line ; do
	case $line in
		S*)
			# clock output
			sys_infos="%{F$COLOR_STATUS_FG}%{B$COLOR_STATUS_BG}${line#?}"
			;;
		T*)
			# xtitle output
			# prevents titles from overshooting
			# my tag layout in the middle
			formatted=$(echo ${line#?} | cut -c1-85)
			title="%{F$COLOR_TITLE_FG}%{B$COLOR_STATUS_BG}$formatted"
			;;
		E*)
			userInfo="${line#?}"
			;;
		M*)
			# M is for mail
			emailInfo="${line#?}"
			;;
		U*)
			updates="${line#?}"
			;;
		W*)
			# bspwm internal state
			wm_infos=""
			IFS=':'
			set -- ${line#?}
			while [ $# -gt 0 ] ; do
				item=$1
				name=${item#?}
				case $item in
					[OU]*)
						# focused occupied desktop
						wm_infos="$wm_infos  %{F$COLOR_FOCUSED_OCCUPIED_FG}%{U$COLOR_FOREGROUND}%{+u}%{U$LIGHTBLUE}"$name"%{-u}"
						;;
					F*)
						#focused free desktop
						wm_infos="$wm_infos  %{F$COLOR_FREE_FG}%{U$COLOR_FOREGROUND}%{+u}%{U$LIGHTBLUE}$name%{-u}"
						;;
					o*)
						# occupied desktop
						wm_infos="$wm_infos  %{F$COLOR_OCCUPIED_FG}$name"
						;;
					f*)
						# free desktop
						wm_infos="$wm_infos  %{F$COLOR_FREE_FG}$name"
						;;
					u*)
						# urgent desktop
						wm_infos="$wm_infos  %{F$COLOR_URGENT_FG}$name"
						;;
				esac
				shift
			done
			;;
	esac
	printf "%s\n" "%{l}$userInfo $title %{c} %{B$MIDDLE}$wm_infos  %{F$BG}%{B$MIDDLE}%{F$COLOR_TITLE_FG}%{B$BG}%{r} $sys_infos  "
done

